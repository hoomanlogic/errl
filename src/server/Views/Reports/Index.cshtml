<div class="row">
    <div id="criteria" class="expanded">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="selectProduct" class="col-sm-4 control-label">Product</label>
                <div class="col-sm-8">
                    <select id="selectProduct" class="form-control" onchange="app.refreshOptions('Product');"></select>
                </div>
            </div>
            <div class="form-group">
                <label for="selectEnvironment" class="col-sm-4 control-label">Environment</label>
                <div class="col-sm-8">
                    <select id="selectEnvironment" class="form-control" onchange="app.getReport();"></select>
                </div>
            </div>
            <div class="form-group">
                <label for="selectReport" class="col-sm-4 control-label">Report</label>
                <div class="col-sm-8">
                    <select id="selectReport" class="form-control" onchange="app.getReport()">
                        <option value="recentVersionsComparison" selected>Recent Versions Comparison</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <div id="view" class="with-criteria">
        <h3 id="headingHourly">Hourly Error Occurrences</h3>
        <hr />
        <div id="myLineChartContainer">
            <canvas id="myLineChart" width="970" height="400"></canvas>
        </div>
        <div id="myLineChartLegend">

        </div>


        <h3 id="headingHourly2">Hourly Users Affected</h3>
        <hr />
        <div id="myLineChartContainer2">
            <canvas id="myLineChart2" width="970" height="400"></canvas>
        </div>
        <div id="myLineChartLegend2">

        </div>


        <h3 id="headingHourly3">Hourly Types of Errors</h3>
        <hr />
        <div id="myLineChartContainer3">
            <canvas id="myLineChart3" width="970" height="400"></canvas>
        </div>
        <div id="myLineChartLegend3">

        </div>
    </div>
</div>

@section scripts {
<script src="~/js/libs.min.js"></script>
<script src="~/js/errl.js"></script>
<script src="~/js/common.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/reports.js"></script>
<script type="text/javascript">
    $().ready(function () {
        $('#navReports').toggleClass('active');
    });
</script>
}